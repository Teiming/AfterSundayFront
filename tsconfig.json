{
  "compilerOptions": {
    // Type Checking
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    // Modules
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@aftsnd/lib": ["lib"],
      "@aftsnd/prisma": ["app/prisma"],
      "@aftsnd/types": ["types"],
      "@aftsnd/utils": ["utils"]
    },
    "resolveJsonModule": true,
    "types": ["node", "react", "react-dom"],
    // Emit
    "noEmit": true,
    // JavaScript Support
    "allowJs": false,
    // Editor Support
    "plugins": [{ "name": "next" }],
    // Interop Constraints
    "esModuleInterop": true,
    "isolatedModules": true,
    // Language and Environment
    "target": "es2023",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    // Projects
    "incremental": true,
    // Completeness
    "skipLibCheck": false
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
